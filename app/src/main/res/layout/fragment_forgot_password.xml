<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    android:background="@color/off_white">

    <EditText
        android:id="@+id/userEmail_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/edit_text_bg_border"
        android:ems="10"
        android:text=""
        android:hint="@string/email_phone_number"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry,TextFields" />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/button_bg"
        android:onClick="onClick"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="@id/userEmail_number"
        app:layout_constraintStart_toStartOf="@id/userEmail_number"
        app:layout_constraintTop_toBottomOf="@id/userEmail_number" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/otpContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verifyButton">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enter_your_6_digit_otp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/otp1"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edit_text_bg_border"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minWidth="@dimen/_30sdp"
            android:nextFocusForward="@+id/otp2"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@id/otp2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="LabelFor,RtlSymmetry" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="0dp"
            android:background="@drawable/edit_text_bg_border"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minWidth="@dimen/_30sdp"
            android:nextFocusForward="@+id/otp2"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@id/otp1"
            app:layout_constraintEnd_toStartOf="@id/otp3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/otp1"
            app:layout_constraintTop_toTopOf="@id/otp1"
            tools:ignore="LabelFor,RtlSymmetry" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="0dp"
            android:background="@drawable/edit_text_bg_border"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minWidth="@dimen/_30sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@id/otp2"
            app:layout_constraintEnd_toStartOf="@id/otp4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/otp2"
            app:layout_constraintTop_toTopOf="@id/otp2"
            tools:ignore="LabelFor,RtlSymmetry" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:background="@drawable/edit_text_bg_border"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minWidth="@dimen/_30sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/otp3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/otp3"
            app:layout_constraintTop_toTopOf="@id/otp3"
            tools:ignore="LabelFor,RtlSymmetry" />

        <Button
            android:id="@+id/verifyOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_80sdp"
            android:background="@drawable/button_bg"
            android:onClick="onClick"
            android:visibility="invisible"
            android:text="@string/verify_otp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="@id/textView5"
            app:layout_constraintStart_toStartOf="@id/textView5"
            app:layout_constraintTop_toBottomOf="@id/otp1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/changePasswordContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otpContainer"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/generatePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_bg"
            android:onClick="onClick"
            android:text="@string/generate_password"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/confirmNewPassword"
            app:layout_constraintStart_toStartOf="@id/confirmNewPassword"
            app:layout_constraintTop_toBottomOf="@id/confirmNewPassword"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/confirmNewPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edit_text_bg_border"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/password_icon"
            android:ems="10"
            android:hint="@string/confirmed_new_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="@id/newPassword"
            app:layout_constraintStart_toStartOf="@id/newPassword"
            app:layout_constraintTop_toBottomOf="@id/newPassword"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/edit_text_bg_border"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/password_icon"
            android:ems="10"
            android:hint="@string/enter_new_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>