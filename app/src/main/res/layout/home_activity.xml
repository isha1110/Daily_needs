<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite"
    tools:context=".HomeActivity"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/navigation_items"
        android:background="@color/colorWhite"
        app:headerLayout="@layout/nav_header_home"
        app:itemIconTint="@color/pink"
        android:theme="@style/NavigationView"

        app:itemTextColor="@color/colorBlack">


        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="onClick"
            android:drawableTint="@color/pink"
            android:text="@string/customer_support"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="@dimen/_120sdp"
            android:gravity="start|center"
            android:layout_marginStart="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/headphone_icon_resize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="onClick"
            android:text="9999 9999 99"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="@dimen/_105sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:drawablePadding="@dimen/_10sdp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="onClick"
            android:text="@string/rate_us"
            android:drawableTint="@color/pink"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="start|center"
            android:drawableStart="@drawable/rate_icon_resize"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_75sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="sans-serif"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="onClick"
            android:drawableTint="@color/pink"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/share_icon_resize"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:textColor="@color/colorBlack"
            android:gravity="start|center"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="sans-serif"
            android:text="@string/share" />
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>